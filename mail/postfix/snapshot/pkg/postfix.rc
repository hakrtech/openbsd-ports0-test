#!/bin/sh
#
# $OpenBSD: postfix.rc,v 1.3 2012/04/10 22:24:29 sthen Exp $

daemon="${TRUEPREFIX}/libexec/postfix/master"
daemon_flags="-w"

. /etc/rc.d/rc.subr

pexp="${daemon}"

rc_start() {
	${TRUEPREFIX}/sbin/postfix ${daemon_flags} start
}

rc_stop() {
	${TRUEPREFIX}/sbin/postfix stop
}

rc_cmd $1
