-	(defined (BIG_ENDIAN) && BIG_ENDIAN+0 != 4321)
+	(defined (BIG_ENDIAN) && BIG_ENDIAN+0 != 4321) || defined(_BIG_ENDIAN)
 	#define BLARGG_BIG_ENDIAN 1
-#elif !defined (__mips__)
+#elif !defined (__mips__) || defined(_LITTLE_ENDIAN)
