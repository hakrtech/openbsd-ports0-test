#!/bin/sh
#
# $OpenBSD: slim.rc,v 1.4 2014/01/30 14:25:35 zhuk Exp $

daemon="${TRUEPREFIX}/bin/slim -d"

. /etc/rc.d/rc.subr

rc_reload=NO

if [ -n "${INRC}" ]; then
rc_start() {
	( local i=0
	while ! pgrep -qf "^/usr/libexec/getty "; do
		sleep 1
		[ $((i++)) -ge 10 ] && return 1
	done
	${rcexec} "${daemon} ${daemon_flags}" ) &
}
fi

rc_cmd $1
