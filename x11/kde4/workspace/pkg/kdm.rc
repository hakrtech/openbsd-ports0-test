#!/bin/sh
#
# $OpenBSD: kdm.rc,v 1.2 2014/01/29 16:49:33 zhuk Exp $

daemon="${TRUEPREFIX}/bin/kdm"

. /etc/rc.d/rc.subr

rc_reload=NO

if [ -n "${INRC}" ]; then
rc_start() {
	( local i=0
	while ! pgrep -qf "^/usr/libexec/getty "; do
		sleep 1
		[ $((i++)) -ge 10 ] && return 1
	done
	sleep 2
	${rcexec} "${daemon} ${daemon_flags}" ) &
}
fi

rc_cmd $1
