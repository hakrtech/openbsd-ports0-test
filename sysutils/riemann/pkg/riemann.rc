daemon="${TRUEPREFIX}/bin/riemann"
daemon_user="_riemann"

. /etc/rc.d/rc.subr

java="$(${LOCALBASE}/bin/javaPathHelper -c clojure)"

pexp="${java}.*riemann.*"

rc_start() {
	${rcexec} "JAVA_CMD=\"${java}\" ${daemon}"
}

rc_cmd $1
