#!/bin/sh
#
# $OpenBSD: svscan.rc,v 1.2 2012/04/06 11:47:54 sthen Exp $

daemon="${TRUEPREFIX}/bin/svscan"
daemon_flags="/service/"

. /etc/rc.d/rc.subr

rc_bg=YES
rc_reload=NO

rc_stop() {
	pkill -f "^${pexp}"
	sleep 1
	${TRUEPREFIX}/bin/svc -X ${daemon_flags}/*
	${TRUEPREFIX}/bin/svc -X ${daemon_flags}/*/log
}

rc_cmd $1
