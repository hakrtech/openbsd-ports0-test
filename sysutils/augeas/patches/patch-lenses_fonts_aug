--- lenses/fonts.aug.orig	Wed Jan  2 21:16:31 2013
+++ lenses/fonts.aug	Wed Jan  2 21:16:40 2013
@@ -31,7 +31,7 @@ let lns = Xml.lns
 let filter = incl "/etc/fonts/fonts.conf"
            . incl "/etc/fonts/conf.avail/*"
            . incl "/etc/fonts/conf.d/*"
-           . excl "/etc/fonts/conf.d/README"
+           . excl "/etc/fonts/*/README"
            . Util.stdexcl
 
 let xfm = transform lns filter
